models:
  Tag:
    title: string:400 unique

  Post:
    title: string:400
    content: longtext
    status: enum:draft,published,archived
    user_id: id foreign
    published_at: nullable timestamp
    relationships:
      hasMany: Comment
      belongsToMany: Tag
      belongsTo: User

  Comment:
    post_id: id foreign
    content: longtext
    user_id: id foreign
    softDeletes: true
    relationships:
      belongsTo: Post, User

seeders: Tag, Post, Comment

controllers:
  Api\Tag:
    resource: api
  Api\Post:
    resource: api
  Api\Comment:
    resource: api
